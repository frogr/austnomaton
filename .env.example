# Austnomaton Environment Variables
# Copy this to .env and fill in your values

# ===================
# Platform API Keys
# ===================

# Moltbook
MOLTBOOK_API_KEY=your_moltbook_api_key_here

# X/Twitter (requires Developer Account)
X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_ACCESS_TOKEN=your_x_access_token_here
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret_here

# ===================
# Notifications
# ===================

# Email notifications (Gmail SMTP or SendGrid)
NOTIFICATION_EMAIL=your_email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Alternative: SendGrid
# SENDGRID_API_KEY=your_sendgrid_key_here

# ===================
# Optional Services
# ===================

# OpenAI (for content generation fallback)
OPENAI_API_KEY=your_openai_key_here

# Anthropic (if needed for external calls)
ANTHROPIC_API_KEY=your_anthropic_key_here
