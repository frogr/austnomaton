# Agent Environment Variables
# Copy this to .env and fill in your values
# DO NOT COMMIT .env TO VERSION CONTROL

# ===================
# Agent Configuration
# ===================

# Agent home directory (defaults to ~/.austnomaton)
# AGENT_HOME=/path/to/your/agent

# ===================
# Platform API Keys
# ===================

# Moltbook (https://moltbook.com - get key from settings)
MOLTBOOK_API_KEY=

# Buttondown Newsletter (https://buttondown.email/settings)
BUTTONDOWN_API_KEY=

# X/Twitter (https://developer.twitter.com)
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_TOKEN_SECRET=

# ===================
# Notifications
# ===================

# Email for ping-austin skill (optional)
NOTIFICATION_EMAIL=
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ===================
# Optional Services
# ===================

# OpenAI (for GPT-4 fallback)
OPENAI_API_KEY=

# Anthropic (usually not needed - Claude Code provides this)
ANTHROPIC_API_KEY=

# Cloudflare R2 Storage (for hosting images/assets)
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_ENDPOINT=
R2_TOKEN=
R2_BUCKET=
R2_PUBLIC_URL=
R2_ACCOUNT_ID=
